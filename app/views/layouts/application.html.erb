<!DOCTYPE html>
<html>
  <head>
    <title>Fight for Felines</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>

  <body class="application-body">
    <!-- <div id="app" class="container"> -->
        <nav class="navbar navbar-expand-md custom-nav">
          <div>
            <%= link_to image_tag('logos/navbarlightblue.png', alt: "logo", class: 'navbar-logo'), '/', class: 'navbar-brand' %>
          </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <%= link_to 'Blog', posts_path, class: 'nav-link' %>
                    </li>
                    <!-- <li class="nav-item">
                        <%= link_to 'Contact Us', new_user_path, class: 'nav-link' %>
                    </li> -->
                </ul>
            </div>
        </nav>
    </div>

    <div style="margin-top:20px">
      <%= yield %>
    </div>
  </body>

</html>
